separator = false
separator_block_width=15
markup=pango
font=pango:Hack Nerd Font Bold 10

[time]
command=date "+%Y-%m-%d %H:%M:%S"
interval=30
color=#ffcc0

[cpu]
command=top -bn1 | grep "Cpu(s)" | sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | awk '{print 100 - $1 "%"}'
interval=5
color=#72F644

[memory]
command=free -h | grep Mem | awk '{print $3 "/" $2}'
interval=10
color=#00a4ff

